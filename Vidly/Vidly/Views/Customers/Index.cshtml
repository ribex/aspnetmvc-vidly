@using Microsoft.Ajax.Utilities
@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>



@*conditional class attribute*@
@{
    var className = Model.Customers.Count > 0 ? "some" : null;
}

@if (className.IsNullOrWhiteSpace())
{
    <p>There aren't any customers yet.</p>
} else
{
    <table>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    <a href="/Details/@customer.Id" class="@className">@customer.Name</a>
                </td>
            </tr>

        }
    </table>
}


